// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL") // Замените на вашу строку подключения
}

model person {
  ID      Bytes    @unique
  Name    String
  Descr   Bytes
  OSName  String
  Changed DateTime
  RoleID  Int
  Show    Bytes
  Data    Bytes
  EAuth   Bytes
  AdmRole Bytes
  UsSprH  Int
}

model v8users {
  ID      Bytes    @unique
  Name    String
  Descr   String
  Changed DateTime @default(now())
  RolesID Int      @default(8)
  Show    Bytes?
  Data    Bytes?
}
